    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/v1/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "health"
          ]
        }
      }
    },
    {
      "name": "Assets: Create upload URLs",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Idempotency-Key",
            "value": "{{$guid}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"files\": [\n    {\n      \"filename\": \"brand.zip\",\n      \"contentType\": \"application/zip\"\n    },\n    {\n      \"filename\": \"image1.jpg\",\n      \"contentType\": \"image/jpeg\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/assets/upload-urls",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "assets",
            "upload-urls"
          ]
        }
      }
    },
    {
      "name": "Projects: Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Idempotency-Key",
            "value": "{{$guid}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Fall Promo \\u2014 Omnichannel\",\n  \"ratio\": \"16:9\",\n  \"style\": \"retail\",\n  \"voice\": \"female-a\",\n  \"script\": \"Hook... Value... CTA...\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/projects",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "projects"
          ]
        }
      }
    },
    {
      "name": "Projects: List",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/v1/projects?page=1&limit=25",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "projects"
          ],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "25"
            }
          ]
        }
      }
    },
    {
      "name": "Storyboard: Generate",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Idempotency-Key",
            "value": "{{$guid}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"scenesHint\": [\n    \"Hook\",\n    \"Value\",\n    \"CTA\"\n  ],\n  \"maxScenes\": 6\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/projects/{{projectId}}/storyboard",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "projects",
            "{{projectId}}",
            "storyboard"
          ]
        }
      }
    },
    {
      "name": "Storyboard: Get",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/v1/storyboards/{{storyboardId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "storyboards",
            "{{storyboardId}}"
          ]
        }
      }
    },
    {
      "name": "Render: Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Idempotency-Key",
            "value": "{{$guid}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"projectId\": \"{{projectId}}\",\n  \"storyboardId\": \"{{storyboardId}}\",\n  \"quality\": \"hd\",\n  \"codec\": \"h264\",\n  \"notifyWebhook\": \"https://example.com/webhook\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/renders",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "renders"
          ]
        }
      }
    },
    {
      "name": "Render: Get",
      "request": {
        "method": "GET",
        "url": {
